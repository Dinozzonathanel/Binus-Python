import math

print("Informasi, input untuk latitude atau longtitude")
print("Arah Timur positif, arah Barat negatif, Utara positif, Selatan negatif")
lat1 = float(input("latitude1 : "))
lon1 = float(input("longtitude1 : "))
lat2 = float(input("latitude2 : "))
lon2 = float(input("longtitude2 : "))

#lat1 = float(38.898)
#lon1 = float(-77.037)
#lat2 = float(48.858)
#lon2 = float(2.294)

#kita perlu convert dari degrees ke radians
lat1_radians = math.radians(lat1)
lon1_radians = math.radians(lon1)
lat2_radians = math.radians(lat2)
lon2_radians = math.radians(lon2)

#begitu juga hasil penguranan dari lat dan long convert ke radians
d_lat = math.radians(lat2 - lat1)
d_lon = math.radians(lon2 - lon1)
#print(lat2-lat1)
#print(lon2-lon1)

#masukan dalam rumus haversine
tmp = math.sin(d_lat / 2)**2 + math.cos(lat1_radians) * math.cos(lat2_radians) * math.sin(d_lon / 2)**2
#print( math.cos(lat1_radians))
c = 2 * math.asin(math.sqrt(tmp))
#print(tmp)
#print(c)
# Radius bumi menggunakan miles
R = 6371.0

jarak = R * c

print(f"Jarak antar titik adalah: {jarak:.2f} km")
